# Use the official npm registry
registry=https://registry.npmjs.org/

# Enforce Node.js version from package.json "engines"
engine-strict=true

# For apps: prefer fully reproducible installs (no ^ in new dependencies)
save-exact=true

# Reduce noise from npm / pnpm during install
fund=true
audit=true

# pnpm reads .npmrc too â€“ this is often handy in frontend projects
auto-install-peers=true
