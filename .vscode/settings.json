{
  // --- FORMATTING & EDITOR BEHAVIOR ---
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Use Prettier for the main web stack
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Let ESLint apply fixes on save (imports, no-unused-vars, etc.)
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  // Keep indentation consistent with .editorconfig
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,

  // Line endings & whitespace (also backed by .editorconfig)
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // --- ESLINT (FLAT CONFIG) ---
  // You are using eslint.config.* (flat config) â€“ tell the extension
  "eslint.useFlatConfig": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.workingDirectories": [{ "mode": "auto" }],
  // Prettier handles formatting; ESLint is only for code-quality rules
  "eslint.format.enable": false,

  // --- TYPESCRIPT ---
  // Use the workspace TypeScript version (from node_modules)
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // --- TAILWIND CSS ---
  // Better Tailwind IntelliSense in TSX/JSX files
  "tailwindCSS.includeLanguages": {
    "typescriptreact": "html",
    "javascriptreact": "html"
  },
  // If you use a Tailwind config file, point to it (v4 may be config-less; adjust if needed)
  "tailwindCSS.experimental.configFile": "tailwind.config.ts",

  // --- SPELL CHECKER (if you kept the recommended extension) ---
  // English + Czech (adjust as you like)
  "cSpell.language": "en,cs",
  "cSpell.enabledFileTypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown",
    "mdx"
  ],

  // --- FILES / EXPLORER ---
  // Hide some common build artifacts (still controlled mainly via .gitignore)
  "files.exclude": {
    "**/.next": true,
    "**/out": true,
    "**/dist": true,
    "**/node_modules": false
  }
}
